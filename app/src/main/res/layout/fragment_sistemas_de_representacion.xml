<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SistemasDeRepresentacion.SistemasDeRepresentacionFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/labelRepresentacion2"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:text="@string/drc"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/txtRepresentacion2"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelRepresentacion1" />

        <TextView
            android:id="@+id/labelRepresentacion1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="8dp"
            android:text="@string/dec"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/txtRepresentacion1"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSRSistemas" />

        <TextView
            android:id="@+id/txtRepresentacion2"
            style="@style/Resultados"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.787"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRepresentacion1" />

        <TextView
            android:id="@+id/txtRepresentacion1"
            style="@style/Resultados"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.787"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSRSistemas" />

        <Spinner
            android:id="@+id/spinnerSRSistemas"
            android:layout_width="110dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtNumeroIngresadoSR"
            app:layout_constraintTop_toBottomOf="@+id/spinnerSRBases" />

        <Spinner
            android:id="@+id/spinnerSRBases"
            android:layout_width="110dp"
            android:layout_height="46dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/txtNumeroIngresadoSR"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtNumeroIngresadoSR"
            android:layout_width="201dp"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:digits="0123456789ABCDEF"
            android:ems="10"
            android:hint="@string/numero_a_convertir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>